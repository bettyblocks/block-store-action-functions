{
  "description": "Evaluate a javascript expression (use {{name_of_your_value}} to interpolate values).",
  "label": "Expression",
  "category": "Misc",
  "icon": {
    "name": "ExpressionIcon",
    "color": "Orange"
  },
  "options": [
    {
      "name": "expression",
      "label": "Expression",
      "meta": {
        "type": "MultilineText",
        "validations": { "required": true }
      },
      "configuration": {
        "placeholder": "\"{{first_name}}\" + \" \" + \"{{last_name}}\""
      }
    },
    {
      "name": "variables",
      "label": "Variables",
      "info": "Map the values that you want to use in your expression.",
      "meta": {
        "type": "Map"
      }
    },
    {
      "name": "schemaModel",
      "label": "Schema Model",
      "info": "The schema model can be utilized to type the output of this step when it is an object or an array of objects.",
      "meta": {
        "type": "SchemaModel"
      }
    },
    {
      "name": "debugLogging",
      "label": "Debug logging",
      "info": "Enable logging to logs",
      "advanced": true,
      "meta": {
        "type": "Boolean"
      }
    },
    {
      "name": "result",
      "label": "Result",
      "info": "The result of the expression.",
      "meta": {
        "type": "Output",
        "validations": {
          "required": true
        },
        "output": {
          "anyOf": [
            {
              "type": "Text"
            },
            {
              "type": "Boolean"
            },
            {
              "type": "Number"
            },
            {
              "type": "Object"
            },
            {
              "type": "Array",
              "schemaModel": "schemaModel",
              "dataType": "SCHEMA"
            }
          ]
        }
      },
      "configuration": {
        "placeholder": "result"
      }
    }
  ],
  "yields": "NONE"
}
