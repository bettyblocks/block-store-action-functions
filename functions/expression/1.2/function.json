{
  "description": "Evaluate a javascript expression (use {{name_of_your_value}} to interpolate values).",
  "label": "Expression",
  "category": "Misc",
  "icon": {
    "name": "ExpressionIcon",
    "color": "Orange"
  },
  "options": [
    {
      "meta": {
        "type": "MultilineText",
        "validations": { "required": true }
      },
      "name": "expression",
      "label": "Expression",
      "configuration": {
        "placeholder": "\"{{first_name}}\" + \" \" + \"{{last_name}}\""
      }
    },
    {
      "info": "Map the values that you want to use in your expression.",
      "label": "Variables",
      "meta": {
        "type": "Map"
      },
      "name": "variables"
    },
    {
      "info": "The result of the expression.",
      "meta": {
        "type": "Output",
        "validations": {
          "required": true
        },
        "output": {
          "anyOf": [
            {
              "type": "Text"
            },
            {
              "type": "Boolean"
            },
            {
              "type": "Number"
            }
          ]
        }
      },
      "name": "result",
      "label": "Result"
    }
  ],
  "yields": "NONE"
}
